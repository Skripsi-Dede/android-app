<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoOutfitAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_primary_1</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonAuthEnable">
        <item name="android:background">@drawable/bg_rounded_button</item>
        <item name="android:fontFamily">@font/font_inter_semibold</item>
        <item name="android:backgroundTint">@color/custom_primary_1</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonAuthDisable">
        <item name="android:background">@drawable/bg_rounded_button</item>
        <item name="android:fontFamily">@font/font_inter_semibold</item>
        <item name="android:backgroundTint">@color/custom_stroke</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/custom_stroke</item>
        <item name="hintTextColor">@color/custom_stroke</item>
        <item name="startIconTint">@color/custom_primary_1</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/bg_text_field</item>
        <item name="android:fontFamily">@font/font_inter_regular</item>
    </style>
    <style name="Theme.GoOutfitAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GoOutfitAndroid.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GoOutfitAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--    Style for Bottom Navigation-->
    <style name="BottomNavigationFontActive">
        <item name="android:fontFamily">@font/font_inter_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigationFontInactive">
        <item name="android:fontFamily">@font/font_inter_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="QuestionnaireCheckbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="fontFamily">@font/font_inter_regular</item>
    </style>

</resources>